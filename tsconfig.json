{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "pretty": true,
    "listEmittedFiles": true,
    "diagnostics": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "files": ["src/index.ts"]
}